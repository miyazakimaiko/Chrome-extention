{
  "name": "Vocabulary Notebook",
  "description": "Simple memo specialized in vocabulary. You can create your own vocabulary list.",
  "author": "Maiko Miyazaki",
  "version": "0.1.0",
  "manifest_version": 2,
  "browser_action":{
    "default_title": "Your Own Dictionary",
      "default_popup": "popup.html"
  },
  "icons": {
    "16": "favicon.ico"
},
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "load.js", "save.js" ]
  }],
  "permissions": [
    "storage"
  ]
}